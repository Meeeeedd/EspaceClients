<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.espaceclient.controller.DonsFXController" stylesheets="@./styles/dons.css" styleClass="vbox">
    <TableView fx:id="donsTable" styleClass="table-view">
        <columns>
            <TableColumn fx:id="idDonColumn" text="ID Don" styleClass="table-column"/>
            <TableColumn fx:id="idClientColumn" text="ID Client" styleClass="table-column"/>
            <TableColumn fx:id="idPartenaireColumn" text="ID Partenaire" styleClass="table-column"/>
            <TableColumn fx:id="montantColumn" text="Montant" styleClass="table-column"/>
            <TableColumn fx:id="dateDonColumn" text="Date Don" styleClass="table-column"/>
            <TableColumn fx:id="statusColumn" text="Status" styleClass="table-column"/>
        </columns>
    </TableView>

    <Button text="Donate" onAction="#handleDonateButtonAction" styleClass="button"/>

    <!-- Donation Form -->
    <GridPane fx:id="donationForm" hgap="10" vgap="10" visible="false" styleClass="grid-pane">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Label text="Donation Amount:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label"/>
        <TextField fx:id="amountField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field"/>
        <Button text="Submit Donation" onAction="#handleSubmitDonationAction" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="button"/>
    </GridPane>
</VBox>